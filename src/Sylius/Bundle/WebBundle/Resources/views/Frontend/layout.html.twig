<!DOCTYPE html>
{% set settings = sylius_settings_all('general') %}
<html>
    <head>
        <title>
            {% block title %}
                {{ settings.title|default('sylius.meta.frontend_title'|trans) }}
            {% endblock %}
        </title>
        <meta charset="UTF-8">
        <meta name="description" content="{{ settings.meta_description|default('sylius.meta.frontend_description'|trans) }}">
        <meta name="keywords" content="{{ settings.meta_keywords|default('sylius.meta.frontend_keywords'|trans) }}">

        <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700' rel='stylesheet' type='text/css'>

        {# stylesheets... #}
        {% block stylesheets %}
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css" type="text/css" />
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" type="text/css" />
            {% stylesheets output='assets/compiled/frontend.css' filter='cssrewrite'
                'bundles/syliusweb/css/frontend.css'
                'bundles/syliusweb/css/blueimp-gallery.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
{% block js%}

        <script src="{{ asset("message/plugins/respond.min.js") }}"></script>
<script src="{{ asset("message/plugins/excanvas.min.js") }}"></script> 
<script src="{{ asset("message/plugins/jquery-1.10.2.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/jquery-migrate-1.2.1.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/bootstrap/js/bootstrap.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/jquery-slimscroll/jquery.slimscroll.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/jquery.blockui.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/jquery.cokie.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/uniform/jquery.uniform.min.js") }}" type="text/javascript"></script>
<!-- END CORE PLUGINS -->
<!-- BEGIN: Page level plugins -->
<script src="{{ asset("message/plugins/fancybox/source/jquery.fancybox.pack.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/bootstrap-wysihtml5/wysihtml5-0.3.0.js") }}" type="text/javascript"></script>
<script src="{{ asset("message/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.js") }}" type="text/javascript"></script>
<!-- BEGIN:File Upload Plugin JS files-->
<!-- The jQuery UI widget factory, can be omitted if jQuery UI is already included -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/vendor/jquery.ui.widget.js") }}"></script>
<!-- The Templates plugin is included to render the upload/download listings -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/vendor/tmpl.min.js") }}"></script>
<!-- The Load Image plugin is included for the preview images and image resizing functionality -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/vendor/load-image.min.js") }}"></script>
<!-- The Canvas to Blob plugin is included for image resizing functionality -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/vendor/canvas-to-blob.min.js") }}"></script>
<!-- blueimp Gallery script -->
<script src="{{ asset("message/plugins/jquery-file-upload/blueimp-gallery/jquery.blueimp-gallery.min.js") }}"></script>
<!-- The Iframe Transport is required for browsers without support for XHR file uploads -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.iframe-transport.js") }}"></script>
<!-- The basic File Upload plugin -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.fileupload.js") }}"></script>
<!-- The File Upload processing plugin -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.fileupload-process.js") }}"></script>
<!-- The File Upload image preview & resize plugin -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.fileupload-image.js") }}"></script>
<!-- The File Upload audio preview plugin -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.fileupload-audio.js") }}"></script>
<!-- The File Upload video preview plugin -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.fileupload-video.js") }}"></script>
<!-- The File Upload validation plugin -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.fileupload-validate.js") }}"></script>
<!-- The File Upload user interface plugin -->
<script src="{{ asset("message/plugins/jquery-file-upload/js/jquery.fileupload-ui.js") }}"></script>
{% endblock %}
        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="container">
        {% block header %}
            <div class="masthead pull-right">
                {{ knp_menu_render('sylius.frontend.main', {'template': 'SyliusWebBundle:Frontend:menu.html.twig', 'allow_safe_labels' : true}) }}
            </div>
            <h1 class="logo"><a href="{{ path('sylius_homepage') }}" title="{{ 'sylius.logo'|trans }}"><span>{{ 'sylius.logo'|trans }}</span></a></h1>
        {% endblock %}

        {% block flashes %}
            {% for type in ['success', 'error', 'fos_user_success'] %}
                {% for flash in app.session.flashbag.get(type) %}
                    <div class="alert alert-{{ type == 'fos_user_success' ? 'success' : type == 'error' ? 'danger' : type == 'notice' ? 'warning' : type }}">
                        <a class="close" data-dismiss="alert" href="#">Ã—</a>
                        {{ flash|trans }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block main %}
        <hr>
        <div class="row">
            <div class="col-md-3" id="sidebar">
                {% block sidebar %}
                <h4>{{ 'sylius.shop_by'|trans }}</h4><br>
                {{ knp_menu_render('sylius.frontend.taxonomies', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}
                {{ render(url('sylius_partial_product_latest', {'limit': 5, 'template': 'SyliusWebBundle:Frontend/Product:latestSidebar.html.twig'})) }}
                {{ sonata_block_render({'name': '/cms/blocks/contact'}) }}

                    <h2>Links</h2>
                    <ul>
                    {% for child in cmf_children(cmf_find('/cms/pages')) %}
                        <li>
                            <a href="{{ path(child) }}">{{ child.title|striptags }}</a>
                        </li>
                    {% endfor %}
                    </ul>
                {% endblock %}
            </div>
            <div class="col-md-9">
                {% block content %}
                {% endblock %}
            </div>
        </div>
        <hr>
        <div class="row">
            {% for i in 1..3 %}
                <div class="col-md-4">
                    {{ sonata_block_render({'name': '/cms/blocks/block-' ~ i}) }}
                </div>
            {% endfor %}
        </div>
        <hr>
        {% endblock %}

        {% block gallery %}
            {# Gallery modal #}
            {% include 'SyliusWebBundle::gallery.html.twig' %}
        {% endblock %}

        {# Confirmation modal #}
        {% include 'SyliusWebBundle::confirm-modal.html.twig' %}

        {% block footer %}
            <div class="footer">
                <p class="text-muted">
                    &copy; Sylius, 2011 - {{ 'now'|date('Y') }}.
                </p>
                {{ knp_menu_render('sylius.frontend.social', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}
            </div>
        {% endblock %}
        </div>

        {# javascripts... #}
        {% block javascripts %}

            <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
            <script type="text/javascript" src="//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"></script>

        {% javascripts output='assets/compiled/frontend.js'
            'bundles/syliusweb/js/jquery.blueimp-gallery.min.js'
            'bundles/syliusweb/js/confirm-modal.js'
            'bundles/syliusweb/js/frontend.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>
